<h1>Add new product to menu</h1>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <br>
  <%= f.label :category_name %>
  <%= f.text_field :category_name %>
  <br>
  <br>

  <h3>"Select from existing category"</h3>
  <br>
  <%= f.collection_select :category_name, Category.all, :name, :name, {:prompt => 'Select'} %>
  <%= f.submit "Add product"%>
<% end %>