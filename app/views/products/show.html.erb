<h1><%= link_to @product.category_name, category_products_path(@product.category) %> </h1> 
<p><%= @product.name %> $<%= @product.price %> </p>
<br>
<%= flash[:notice] %>
<br>
<p><%=button_to "Add to cart", line_items_path(product_id: @product)%></p>
<br>
<% if logged_in? && current_user.admin? %>
    <%= button_to 'Edit product', edit_product_path(@product), method: :get %>
    <%= button_to 'Delete product', product_path(@product), method: :delete%>
<% end %>
    
