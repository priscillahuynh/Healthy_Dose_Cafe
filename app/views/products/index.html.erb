<h1><%=@category.name%> </h1> 
<div class= "display">
    <%= flash[:notice] %>
    <% @category.products.all.each do |p| %>
    <%= link_to p.name, product_path(p) %> $<%= p.price %> <br><br>
    <% end %>

    <% if logged_in? && current_user.admin? %>
        <%= button_to 'Add new product', new_category_product_path(@category), method: :get %>
    <% end %>
</div>