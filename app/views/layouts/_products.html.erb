<%= form_for @product do |f| %>

<%= f.label :image %> 
<%= f.file_field :image %>
<br>
<% if params[:category_id] %>
  <%= f.hidden_field :category_id %>
<% else %>
<br>
  <%= f.label :category_id, "Select A Category"%><br>
  <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
<% end %>
  <br>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :price %> $
  <%= f.number_field :price, value: @product.price ? '%.2f' % @product.price : nil, min: 0, step: 0.01 %>
  <br>
  <br>  
  <%= f.submit  %>
<% end %>