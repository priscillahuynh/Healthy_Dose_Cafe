<h1>Healthy Dose Cafe</h1>
<div class= "display">
<br>
<br>
<%= form_for @line_item do |f| %>
  <%= f.label :special_request %>
  <%= f.text_area :special_request %>
<br>
<br>
  <% f.hidden_field :quantity, value: @line_item.quantity %>
  <% f.hidden_field :product_id, value: @line_item.product_id %>
  <% f.hidden_field :cart_id, value: @line_item.cart_id %>

  <%= f.submit "Submit request"%>
<% end %>
</div>
