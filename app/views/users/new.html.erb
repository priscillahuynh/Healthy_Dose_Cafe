
<div class= "login">
<h1>Signup</h1>

<%= render partial: '/layouts/errors', locals: {object: @user} %>
<br>
<br>
<%= form_for @user do |f| %>
  <%= f.label :username %>  
  <%= f.text_field :username %> 
<br>
<br>
  <%= f.label :password %>  
  <%= f.password_field :password %> 
<br>
<br>
  <%= f.hidden_field :admin %> 
  <%= f.submit "Signup"%>
<% end %>
</div>