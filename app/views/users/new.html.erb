<h1>Signup!</h1>
<div class= "display">


<%= render partial: '/layouts/errors', locals: {object: @user} %>

<%= form_for @user do |f| %>
  <%= f.label :username %>  
  <%= f.text_field :username %> 
<br>
<br>
  <%= f.label :password %>  
  <%= f.password_field :password %> 
<br>
<br>
  <%= f.label :admin? %>
  <%= f.check_box :admin %> 
<br>
<br>
  <%= f.submit "Signup"%>
<% end %>
</div>